{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@globalStyles/*": ["src/globalStyles/*"],
      "*": ["src/*"],
    }
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
